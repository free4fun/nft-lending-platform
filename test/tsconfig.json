{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": ".",
      "baseUrl": "."
    },
    "include": [
      "./scripts/**/*",
      "./test/**/*",
      "./typechain-types/**/*",
      "hardhat.config.ts"
    ],
    "files": ["hardhat.config.ts"]
  }
  